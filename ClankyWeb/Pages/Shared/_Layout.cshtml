<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Description"]" />
    <title>@ViewData["Title"] | Aktivní rekondice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/style.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-light fixed-top border-bottom border-success mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"> <img src="~/img/logo.png" alt="Logo" height="50px" />Aktivní rekondice</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Domů</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Aktuality">Aktuality</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Rezervace/Rezervace">Rezervace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Nabidka">Nabídka</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Cenik">Ceník</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Kontakty">Kontakty</a>
                        </li>
                        @if (User.IsInRole(NRole.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-page="/Users">Uživatelé</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <button id="themeToggle" type="button"
                            class="btn btn-outline-secondary ms-3">
                        🌙 / ☀️
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row align-items-center row-cols-xl-3 row-cols-md-3 row-cols-1">
                <div class="col text-center">
                    <p>
                        Kontakt: <br> 733 528 284, 731 383 207 <br> aktivnistari.rekondice@gmail.com
                    </p>
                </div>
                <div class="col text-center">
                    <p>IČO: 19339364 <br> IČO: 21343071</p>
                </div>
                <div class="col text-center">
                    <p>&copy; 2025 Aktivní rekondice</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>