@page "{id:int}"
@model ClankyWeb.Pages.Rezervace.EditModel
@using ClankyWeb.Data.Models
@{
    ViewData["Title"] = "Upravit událost";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="EventItem.Id" />

    <div class="mb-3">
        <label asp-for="EventItem.Title" class="form-label">Název</label>
        <input asp-for="EventItem.Title" class="form-control" />
        <span asp-validation-for="EventItem.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EventItem.Date" class="form-label">Datum a čas</label>
        <input asp-for="EventItem.Date" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="EventItem.Description" class="form-label">Popis</label>
        <textarea asp-for="EventItem.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="EventItem.Capacity" class="form-label">Kapacita</label>
        <input asp-for="EventItem.Capacity" type="number" min="1" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Uložit změny</button>
</form>

<hr />

<form method="post" asp-page-handler="Delete" onsubmit="return confirm('Opravdu odstranit událost?');">
    <input type="hidden" name="id" value="@Model.EventItem.Id" />
    <button type="submit" class="btn btn-danger">Odstranit událost</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
